<%- include('./partials/header') -%>

<div class="jumbotron" style="background: none !important; padding: 10px 30px; margin-bottom: 0px;">

  <div class="row mt-5">
    <div class="col-md-6 m-auto">
      <div class="card card-body" style="border-style: solid; border-color: rgb(157, 157, 157); border-radius: .5em; border-width: 3px;">
        <div><a href="/"><img style="width: 100%" src="/images/background/TOR_logo_Index_v3.png"></a></div>
        <br>
        <h1 class="text-center mb-3"><i class="fas fa-sign-in-alt"></i>  Login</h1>
        <%- include('./partials/messages') -%>
        <form action="/users/login" method="POST">
          <div class="form-group">
            <label for="email">Email</label>
            <input
              type="email"
              id="email"
              name="email"
              class="form-control"
              placeholder="Enter Email"
            />
          </div>
          <div class="form-group">
            <label for="password">Password</label>
            <input
              type="password"
              id="password"
              name="password"
              class="form-control"
              placeholder="Enter Password"
            />
          </div>
          <button type="submit" class="btn btn-primary btn-block">Login</button>
        </form>
        <p class="lead mt-4">
          No Account? <a href="/users/register">Register</a>
        </p>
      </div>
    </div>
  </div>

</div>

<%- include('./partials/footer') -%>
